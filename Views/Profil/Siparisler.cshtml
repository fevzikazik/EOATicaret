
@{
    ViewBag.Title = "Siparisler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using EOATicaret.Models;

<link rel="stylesheet" type="text/css" href="~/Content/styles/category.css">
<link rel="stylesheet" type="text/css" href="~/Content/styles/category_responsive.css">
<link rel="stylesheet" type="text/css" href="~/Content/styles/cart.css">
<link rel="stylesheet" type="text/css" href="~/Content/styles/cart_responsive.css">

<!-- Home -->

<div class="home">
    <div class="home_container d-flex flex-column align-items-center justify-content-end">
        <div class="home_content text-center">
            <div class="home_title">Siparişlerim</div>
            <div class="breadcrumbs d-flex flex-column align-items-center justify-content-center">
                <ul class="d-flex flex-row align-items-start justify-content-start text-center">
                    <li>Sipariş işlemlerinizi burdan yönetebilirsiniz</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Cart -->

<div class="cart_section">
    <div class="container">

        <div class="col-lg-12 cart_extra_col">
            <div class="cart_extra cart_extra_2">
                <div class="cart_extra_content cart_extra_total">

                    <div class="cart_container">

                        <!-- Cart Bar -->
                        <!-- Cart Items -->
                        <div class="cart_items">
                            <ul class="cart_items_list">

                                @if (((List<tblSiparis>)ViewBag.Siparislerim).Count == 0)
                                {
                                    <h1>Siparişiniz Yok!</h1>
                                }
                                else
                                {
                                    <div class="cart_bar">
                                        <ul class="cart_bar_list item_list d-flex flex-row align-items-center justify-content-end">
                                            <li class="mr-auto">Siparis ID</li>
                                            <li></li>
                                            <li></li>
                                            <li>Fiyat</li>
                                            <li>Adet</li>
                                            <li>Toplam</li>
                                        </ul>
                                    </div>

                                    <!-- Siparisler -->
                                    foreach (tblSiparis sip in (List<tblSiparis>)ViewBag.Siparislerim)
                                    {
                                        <li class="cart_item item_list d-flex flex-lg-row flex-column align-items-lg-center align-items-start justify-content-lg-end justify-content-start">
                                            <div class="product d-flex flex-lg-row flex-column align-items-lg-center align-items-start justify-content-start mr-auto">
                                                <div><div class="product_number">@sip.siparisID</div></div>
                                                <div><div class="product_image"><img src="~/@sip.tblUrunler.urunDetayResim" alt=""></div></div>
                                                <div class="product_name_container">
                                                    <div class="product_name"><a href="product.html">@sip.tblUrunler.urunAdi</a></div>
                                                    <div class="product_text">Second line for additional info</div>
                                                </div>
                                            </div>
                                            <div class="product_color product_text"><span></span></div>
                                            <div class="product_size product_text"><span></span></div>
                                            <div class="product_price product_text"><span></span>@sip.tblUrunler.urunDetayFiyat ₺</div>
                                            <div class="product_quantity_container">
                                                <div class="product_quantity ml-lg-auto mr-lg-auto text-center">
                                                    <span class="product_text product_num">1</span>
                                                    <div class="qty_sub qty_button trans_200 text-center"><span>-</span></div>
                                                    <div class="qty_add qty_button trans_200 text-center"><span>+</span></div>
                                                </div>
                                            </div>
                                            <div class="product_total product_text"><span>Total: </span>9.99 ₺</div>
                                        </li>
                                    }
                                }



                            </ul>
                        </div>


                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


